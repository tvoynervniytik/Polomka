<Page x:Class="Polomka.Pages.ClientServicesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Polomka.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1450"
      Title="ClientServicesPage">

    <Grid>
        <!--
Разметка страницы
-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--
Цветные поля
-->
        <Rectangle Grid.RowSpan="3"
    Fill="#ffffe1"/>
        <Rectangle Grid.ColumnSpan="3"
    Fill="#ffffe1"/>

        <!--
        Кнопка назад
        -->
        <Button Style="{StaticResource back}" 
        Grid.Row="1" Click="BackBtn_Click"/>
        <!--
 Лого
 -->

        <Image Source="\service_logo.png"
        Height="80" MouseDown="Image_MouseDown"/>
        <!--
 Заголовок
 -->
        <TextBlock Text="Сервис" 
            Grid.Row="1" Grid.Column="1"
            Style="{StaticResource Main}"/>

    </Grid>
</Page>
