<Page x:Class="Polomka.Windows.EditSClientWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Polomka.Windows"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1450"
      Title="Редактирование клиента">

    <Grid>

        <!--
Разметка страницы
-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--
Цветные поля
-->
        <Rectangle Grid.RowSpan="3"
    Fill="#ffffe1"/>
        <Rectangle Grid.ColumnSpan="3"
    Fill="#ffffe1"/>

        <!--
       Кнопка назад
       -->
        <Button Style="{StaticResource back}" 
       Grid.Row="1" />
        <!--
Лого
-->

        <Image Source="\service_logo.png"
       Height="80" MouseDown="Image_MouseDown"/>
        <!--
 Заголовок
 -->
        <TextBlock Text="Редактировнаие клиента" 
            Grid.Row="1" Grid.Column="1"
            Style="{StaticResource Main}"/>
            

    <!--
    Кнопка назад
    -->
    <Button Style="{StaticResource back}" 
        Grid.Row="1" Click="Button_Click"/>


            <!--
        Основная часть
        -->
            <StackPanel Grid.Column="1" 
                    Grid.Row="2"
                    Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="10 0 10 10">
                            <TextBlock Text="ID услуги:"
                               Width="310"
                               Style="{StaticResource default}"/>
                            <TextBox x:Name="idTb"
                                     IsEnabled="False"
                                     Margin="10"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="10 0 10 0">
                            <TextBlock Text="
                               Наименование услуги:"
                               TextWrapping="Wrap"
                               Width="310"
                               Style="{StaticResource default}"/>
                            <TextBox x:Name="nameTb"
                             Margin="10"
                             Width="400"
                             Height="100"
                             TextWrapping="Wrap"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="10">
                            <TextBlock Text="Продолжительность:"
                                   TextWrapping="Wrap"
                                   Width="310"
                                   Style="{StaticResource default}"/>
                            <TextBox x:Name="durationTb" 
                                 Width="150"
                                 Margin="10"/>
                            <TextBlock Text="мин"
                                   Margin="0 15 0 0"
                                   Style="{StaticResource default}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="10">
                            <TextBlock Text="Стоимость услуги:"
                               TextWrapping="Wrap"
                               Width="310"
                               Style="{StaticResource default}"/>
                            <TextBox x:Name="costTb" 
                             Width="150"
                             Margin="10 0"/>
                            <TextBlock Text="₽" 
                               Style="{StaticResource default}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="10">
                            <TextBlock Text="Скидка услуги:"
                               TextWrapping="Wrap"
                               Width="310"
                               Style="{StaticResource default}"/>
                            <TextBox x:Name="discountTb" 
                             Margin="10"
                             Width="100"/>
                            <TextBlock Style="{StaticResource default}"
                               Text="%"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="10 0 10 10">
                            <TextBlock Text="
                               Описание услуги:"
                               TextWrapping="Wrap"
                               Width="310"
                               Style="{StaticResource default}"/>
                            <TextBox x:Name="descriptionTb"
                             Margin="10"
                             Height="200"
                             Width="400"
                             TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Добавление фото:" 
                                   TextAlignment="Center"
                                   Style="{StaticResource default}"/>
                        <Image Width="300"
                               Height="190"
                               x:Name="img"
                               Source="{Binding ImagePath}"/>
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                            <Button Width="200"
                                x:Name="photoBtn"
                                Content="выбрать фото" 
                                Command="{Binding AddPhotoCommand}" 
                                Click="photoBtn_Click"
                                />
                            <Button Width="200"
                                x:Name="photoDelBtn"
                                Background="red"
                                Content="удалить фото" 
                                Command="{Binding DelPhotoCommand}" Click="photoDelBtn_Click" 
                                />

                        </StackPanel>
                        <ListView x:Name="photosLv" Height="250" Width="400"
                                  ItemsSource="{Binding servicePhotos}">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Фото" Width="390">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Image Source="{Binding PhotoPath}"
                                                       Width="370"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <Button Width="auto"
                                x:Name="photoDopBtn"
                                Content="выбрать доп. фото" 
                                Click="photoDopBtn_Click"
                                />
                        <Button Width="auto"
                                x:Name="photoDopDelBtn"
                                Content="удалить доп. фото" 
                                Background="Red" Click="photoDopDelBtn_Click"/>
                    </StackPanel>
                </StackPanel>
                <Button x:Name="addBtn" 
                        Content="редактировать"
                        Width="230"
                        Margin="0 -25 0 0"
                        Click="addBtn_Click"/>
            </StackPanel>
        </Grid>
   
</Page>
